/*******************************
    User Variable Overrides
*******************************/

@borderRadius: 0;
@border: @inputBorder;
@horizontalPadding: 0;
@verticalPadding: 6px;
@errorColor: @textColor;
@labelTransition: 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms;
@background: transparent;
@placeholderColor: fade(@textColor, 50);
@placeholderFocusColor: fade(@textColor, 80);